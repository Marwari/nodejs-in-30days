<% include header.ejs %>
<style>
section#home {
    display: none;
}
</style>
<!-- Start Login Area -->
<section class="features-area pt-100" id="login">
	<div class="container">
		<div class="feature-section">
			<div class="">
				<div class="container">
					<h1> Profile </h1>
					<hr>
					<table border="1" cellpadding="7" cellspacing="7">
						<tr>
							<th width="50px">No</th>
							<th>Name</th>
							<th>Address</th>
							<th>Phone</th>
							<th>Email</th>
						</tr>
						<% if(data.length){ 
							for(var i = 0;i < data.length;i++) { %>
						<tr>
							<td><%=(i+1)%></td>
							<td><%=data[i].firstName%> <%=data[i].lastName%></td>
							<td><%=data[i].address%></td>
							<td><%=data[i].contact%></td>
							<td><%=data[i].email%></td>
						</tr>
						<% }
							}else{ %>
						<tr>
							<td colspan="6">No user</td>
						</tr>
						<% } %>
					</table>
					
				</div>
				<div class="col-lg-6">	
					<% if(data[0].role == '1' ){ %>
					<span class='form-control'> <a href="http://localhost:3000/alluser"> All Users</a></span>
					<span class='form-control'> <a href="http://localhost:3000/allorders"> All Orders </a></span>
					<span class='form-control'> <a href="http://localhost:3000/addmenu">Add Food menu</a></span>
					<% }else if(data[0].role == '2' ){ %> 
						<span class='form-control'> <a href="http://localhost:3000/checkmenu"> Book Orders </a></span>
					<%	}  %>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- End Login Area -->

<!-- End Contact Area -->
