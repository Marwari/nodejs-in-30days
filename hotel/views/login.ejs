<style>
section#home {
    display: none;
}
</style>
<!-- Start Login Area -->
<section class="features-area pt-100" id="login">
	<div class="container">
		<div class="feature-section">
			<div class="">
				<form class="form-group" method="post" autocomplete="off" action="/myaccount">
					<div class="container">
						<h1> Login </h1>
						<hr>
						<div class="form-group">
							<label for="username"><b>UserName</b></label>
							<input type="text" autocomplete="off" placeholder="Enter UserName" class="form-control" name="userName" required>
						</div>
						<div class="form-group">
							<label for="psw"><b>Password</b></label>
							<input type="password" id="usrPass" autocomplete="off" placeholder="Enter Password" class="form-control" name="password" required>
						</div>
						<div class="clearfix">
							<button type="submit" id="myBtn" class="btn btn-default">Login </button>
							<a href="/signup" style="float:right;">Need an Account? </a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>
<!-- End Login Area -->

